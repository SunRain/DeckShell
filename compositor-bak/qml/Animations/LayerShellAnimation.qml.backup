import QtQuick

Item {
    id: root

    signal animationFinished

    ParallelAnimation {
        id: layerShellAnimation

        PropertyAnimation {
            target: root
            property: "opacity"
            from: 0.0
            to: 1.0
            duration: 250
            easing.type: Easing.OutCubic
        }

        PropertyAnimation {
            target: root
            property: "y"
            from: -root.height
            to: 0
            duration: 250
            easing.type: Easing.OutCubic
        }

        onFinished: {
            root.animationFinished()
        }
    }

    function start() {
        layerShellAnimation.start()
    }

    function reverse() {
        // Reverse animation for closing
        layerShellAnimation.stop()
        layerShellAnimation.start()
    }
}