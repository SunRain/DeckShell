import QtQuick
import DeckShell.Compositor

Item {
    id: root

    required property SurfaceWrapper surface

    signal animationFinished

    SequentialAnimation {
        id: minimizeAnimation

        PropertyAnimation {
            target: surface
            property: "opacity"
            from: 1.0
            to: 0.0
            duration: 200
            easing.type: Easing.InCubic
        }

        PropertyAnimation {
            target: surface
            property: "scale"
            from: 1.0
            to: 0.8
            duration: 200
            easing.type: Easing.InCubic
        }

        onFinished: {
            root.animationFinished()
        }
    }

    function start() {
        minimizeAnimation.start()
    }
}