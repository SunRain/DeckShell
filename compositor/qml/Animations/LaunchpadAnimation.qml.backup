import QtQuick

Item {
    id: root

    width: 400
    height: 300

    signal animationFinished

    ParallelAnimation {
        id: launchpadAnimation

        PropertyAnimation {
            target: root
            property: "opacity"
            from: 0.0
            to: 1.0
            duration: 300
            easing.type: Easing.OutCubic
        }

        PropertyAnimation {
            target: root
            property: "scale"
            from: 0.8
            to: 1.0
            duration: 300
            easing.type: Easing.OutCubic
        }

        onFinished: {
            root.animationFinished()
        }
    }

    function start() {
        launchpadAnimation.start()
    }
}